<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:padding="8dp"
    tools:context="com.campuswatch.ascres_android.login.UserPhoneFragment">

    <com.campuswatch.ascres_android.views.SamuelsMediumTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phone_et"
        android:text="@string/phone_info"
        android:textAlignment="center"
        android:padding="30dp"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/phone_et"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phone_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:hint="Phone Number"
        android:inputType="phone" />

    <Button
        android:id="@+id/phone_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@color/prussianBlue"
        android:textColor="@color/white"
        android:text="@string/phone_ok"/>

</RelativeLayout>
