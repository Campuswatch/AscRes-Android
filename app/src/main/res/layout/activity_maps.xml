<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:clickable="true"
    tools:openDrawer="start">

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:context="net.campuswatch.campuswatch.map.MapsActivity">

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.gms.maps.SupportMapFragment">

            <android.support.v7.widget.Toolbar
                android:id="@+id/map_toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/clear_dark"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        </fragment>

        <net.campuswatch.campuswatch.views.CircularProgressBar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/help_map_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:src="@drawable/green_button"
            app:border_color="#00ffffff"
            app:border_width="3dp"
            app:center_circle_diameter="1"
            app:progress_color="@color/colorPrimary"
            app:progress_startAngle="270"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/help_flame"
            android:src="@drawable/big_button_flame"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            tools:ignore="ContentDescription"
            android:visibility="gone"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/chat_fab"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:backgroundTint="@color/colorPrimary"
            android:layout_gravity="bottom|end"
            android:src="@drawable/chat_word"
            android:layout_margin="20dp"
            android:visibility="gone"/>

    </FrameLayout>


        <android.support.design.widget.NavigationView
            android:id="@+id/user_view"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:background="@color/clear_dark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    tools:ignore="ContentDescription"/>

                <LinearLayout
                    android:layout_below="@+id/user_image"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/off_white"
                        android:textAlignment="center"
                        android:layout_marginBottom="5dp"
                        android:textSize="22sp"/>

                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/off_white"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/off_white"
                        android:textSize="17sp"/>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/user_update_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_edit_profile"
                    android:background="@color/transparent"
                    android:layout_margin="10dp"/>

            </RelativeLayout>

        </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>