<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/info_window_background">

        <com.campuswatch.ascres_android.views.SamuelsBoldTextView
            android:id="@+id/incident_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9"
            android:textSize="14sp"
            android:padding="8dp"
            android:paddingTop="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/as_gradient"/>

        <com.campuswatch.ascres_android.views.SamuelsMediumTextView
            android:id="@+id/incident_time_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:layout_margin="1dp"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:padding="5dp"/>

    </LinearLayout>

</LinearLayout>
