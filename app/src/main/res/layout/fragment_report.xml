<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:animateLayoutChanges="true"
    android:padding="30dp" android:paddingEnd="40dp" android:paddingStart="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/cw_window_scheme">

    <ImageView
        android:id="@+id/report_torch"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/logo_full"/>

    <TextView
        android:id="@+id/report_text6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REPORT AN INCIDENT"
        android:gravity="center_horizontal|bottom"
        android:layout_marginBottom="5dp"
        android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/report_window_background">

    <TextView
        android:tag="0"
        android:id="@+id/report_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MASS PUBLIC THREAT"
        android:gravity="center"
        android:textColor="#910505"
        android:layout_margin="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="20sp"
        android:clickable="true"/>

    <TextView
        android:tag="1"
        android:id="@+id/report_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ASSAULT"
        android:textColor="#c43307"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:clickable="true"/>

    <TextView
        android:tag="2"
        android:id="@+id/report_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HARASSMENT"
        android:textColor="#e25731"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:clickable="true"/>

    <TextView
        android:tag="3"
        android:id="@+id/report_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THEFT"
        android:gravity="center"
        android:textColor="#ed881c"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:clickable="true"/>

    <TextView
        android:tag="4"
        android:id="@+id/report_text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUSPICIOUS ACTIVITY"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="#eab84c"
        android:textSize="20sp"
        android:clickable="true"/>

    </LinearLayout>

</LinearLayout>